
#!/bin/bash
set -e
if ! [ $(id -u) = 0 ]; then
   echo "This script must be run as root."
   exit 1
fi
# install mdstat
cd /usr/local/bin
cp -a ~/fsl10/AUID/*_account .
chown root:root *_account
chmod a+rx *_account
#
touch ~oper/.profile
cat ~/fsl10/AUID/profile >> ~oper/.profile
touch ~prog/.profile
cat ~/fsl10/AUID/profile >> ~prog/.profile
touch ~root/.profile
cat ~/fsl10/AUID/profile_root >> ~root/.profile
